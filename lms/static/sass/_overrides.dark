      .courses {
        width: 100% !important;
        padding: 40px 0 15px 0 !important;
        .course-date {
          display: none;
        }
        .sr {
          display: none;
        }
      }
    }
    #filter-bar {
      border-top: 2px solid $mid-gray;
      border-bottom: 2px solid $mid-gray;
    }
    .courses-listing {
      margin: auto;
      li {
        clear: none;
        margin: 0 2.35765% 30px 0 !important;
        &:last-child {
        margin: 0 0 30px 0 !important;
        }
      }
      .course {
        border-radius: 4px;
        border: 1px solid $dark-gray;
        margin-bottom: 2px;
        box-shadow: none;
        &:hover {
          border: 1px solid $off-white;
          box-shadow: 0 1px 4px 0 $off-white;
          margin: 0 auto;
          border-bottom: 3px solid #126f9a;
        }
        .course-info {
          background: $base-gray;
          color: $light-text;
          h2 {
            color: $off-white;
            .course-organization {
              color: inherit;
            }
            .course-title {
              color: inherit;
            }
          }
        }
        .course-image {
          border-radius: 4px 4px 0 0;
          .cover-image {
            border-radius: inherit;
            &:before {
              border-radius: inherit;
            }
            img {
              border-radius: inherit;
            }
            .learn-more {
              border-radius: 4px;
            }            
          }
        }
      }
    }
  }
}

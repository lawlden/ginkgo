//Color & Image Variables
$off-white: rgb(252,252,252);
$light-gray: rgb(245,245,245);
$mid-gray: rgb(230,230,230);
$border-gray: rgb(200,200,200);
$base-gray: rgb(40,40,40);
$dark-bg: url('../images/chalk.jpg') fixed;
$banner-bg: url('../images/chalk.jpg');

//Variable Overrides
$header-bg: $off-white;
$footer-bg: $light-gray;
$homepage-bg-image: $off-white;           //top banner image
$course-header-bg: $off-white;
$homepage-bg: $off-white;
$container-bg: $off-white;
$base-font-color: $base-gray;       //course top section
$text-color: $base-font-color;
$link-color: $base-font-color;
$link-hover: rgb(0,121,188);
$content-wrapper-bg: $off-white;         //landing page wrapper
$body-bg: $light-gray;             //base background (extends footer)
$course-bg-color: $off-white;
$button-bg-image: none;
$button-bg-color: $link-hover;
$button-hover-color: $off-white;

//Theme-specific Variables
$light-text: $off-white;
$dark-text: $base-font-color;
$hover-blue: $link-hover;
$text-tint: tint($base-font-color, 75%);
$text-shade: shade($base-font-color, 25%);
$border: 1px solid $border-gray;

//////////////////////////////////////////

//Global Overrides

html {
  background: $light-gray !important;
  min-height: 100vh !important;
  width: 100% !important;
  max-width: 100% !important;
  max-height: auto !important;
  margin: 0;
  padding: 0;
}

body {
 height: 100% !important;
 background: $light-gray;
}

a {
  text-decoration: none;

  &:hover {
    text-decoration: none;
  }
} 

#main {
  width: 100% !important;
}

.break {
  clear: both;
}

.logo {
  border-radius: 50%;
}

.container {
  background: $off-white;
  min-width: 300px !important;
  max-width: 1200px;
}

.course {
  background: $off-white;
}

.content-wrapper {
  background: $off-white;
}

.search-button {
  background: $hover-blue !important;
  color: $off-white !important;
  border: 2px solid $hover-blue !important;
  &:hover {
    background: $off-white !important;
    color: $hover-blue !important;
  }
}

//////////////////////////////////////////

//LMS Header Overrides

@media only screen and (max-width: 768px) {
  .header-global {
    .logo {
      margin-right: 2px !important;
    }
  }
}

.window-wrap {
  min-width: 0 !important;
}

.header-global {
  min-width: 0 !important;
  color: $base-gray;
  text-decoration: none;
  text-shadow: none;  
  
  #global-links {
    a {
      color: $base-gray;
      font-weight: bold;
      text-decoration: none;

      &:hover {
        color: $hover-blue;
        text-decoration: none;   
      }
    }
  }

  #head-market {  
    a {
      color: $base-gray;
      font-weight: bold;

      &:hover {
        color: $hover-blue;
      } 
    }
  }
  
  .btn-login {
    color: $light-text;
    font-weight: bold;
    margin: 3px 8px 0 0;

    &:hover {
      background-color: $off-white;
      text-decoration: none;
      color: $hover-blue;
    } 
  }

  #username {
    margin-right: 5px;
    margin-top: 7px;
    border-bottom: none;
    max-width: 95px;
    text-overflow: ellipsis;

    .user-link {
      background: transparent !important;
      color: $base-gray;
      text-shadow: none;
      text-decoration: underline;  

      &:hover {
        color: $hover-blue;
        background-color: transparent;
      }
    }
  }
  
  .user {
    padding-top: 5px;
    margin-right: 8px;
    
    a:hover {
      color: $hover-blue;
    }
 
    #headdrop {
      float: right;
      border-radius: 50%;
      .dropdown {
        border-radius: inherit;
        border: 1px solid;
        &:hover {
          color: $hover-blue
        }
      }
    }

    .fa-custom {
      color: inherit !important;
    }
  }
}

.header-global.slim {
  min-width: 0 !important;
  .course-header {
    width: auto;
    margin-top: 13px;
  }

  #slimlogo {
    margin: 0;
    padding: 0;
  }
}

#global-navigation {
  h2 {
    color: $dark-text;
    text-shadow: none;
  }
}

//////////////////////////////////////////

//LMS Footer Overrides
.view-in-course {
  .wrapper-footer {
    margin-top: 0;
  }
}

.wrapper-footer {
  color: $dark-text;
  margin: 0 auto;
  padding: 20px 0 30px 0 !important;

  footer {
    max-width: 1180px;
    margin: 0 auto;
    padding: 0 10px 0 15px;
  }

  ol {
    float: left;
    
    a {
      color: $dark-text;
      font-weight: bold;

      &:hover {
        color: $hover-blue;
        text-decoration: none;
      }
    }
  }
    
  li {
    display: inline;
    padding-right: 15px;
    font-weight: bold;
    &:last-child {
      padding: 0;
    }
  }

  .references {
    float: right;
    margin: 0;
    margin-top: 2px;
    padding: 0;
  }

  .logo-footer {
    margin: 0 auto;
    float: right;
  }

  .copyright {
    font-size: 0.9em;
    margin: 0;
  }
}

@media only screen and (min-width: 481px) {
  #references {
    display: none;
  }
}

@media only screen and (min-width: 0px) and (max-width: 480px) {
  .logo-footer {
    display: none;
  }

  #references {
    display: block !important;
    margin: 0 auto;
    padding-top: 7px;
    text-align: center;
    a {
      color: $dark-text;
      font-size: 0.7em;
      font-weight: bold;
    }
  }

  .copyright {
    font-size: 0.7em;
  }
  
  .nav-colophon {
    ol {
      padding: 0 0 5px 0;
      margin: 0 auto !important;
      width: 100%;
      display: inline;
      text-align: center;
      font-size: 0.9em;
    }
  }
  
  .copyright {
    padding-bottom: 5px;
    margin: 0 auto;
    text-align: center;
  }
}

//////////////////////////////////////////

//Landing Page Overrides

@media screen and (max-width: 410px) {
  .outer-wrapper {
    padding: 10px 10px 10px 10px !important;
    #home-wrapper {
      h1 {
        font-size: 1.8em;
      }
      p {
        font-size: 1em;
      }
      .course-search {
        input {
          font-size: inherit;
        }
      }
    }
  }
}

#main {
  .home {
    header {
      background-color: $off-white;
      background: $off-white;
      
      .outer-wrapper {
        #home-wrapper {
          border: 1px solid rgb(202,202,202);
          border-radius: 7px;

          .heading-group {
            margin: 0 auto;
            display: inline;
            #banner-text {
              text-align: center;
              margin: 0 auto;
            
              h1 {
                text-align: center;
                margin: 0 auto;
              }
            }
          }
        }
      }
    }

    .courses-listing {
      max-width: 97%;
      margin: 0 auto;
      .course {
        border-radius: 4px;
        border: 1px solid $off-white;
        margin-bottom: 2px;
        box-shadow: none;
        &:hover {
          border: 1px solid #bebebe;
          box-shadow: 0 1px 4px 0 rgba(0,121,188,0.4);
          border-bottom: 3px solid #126f9a;
        }
      }
      .course-image {
        border-radius: 4px 4px 0 0;
        .cover-image {
          border-radius: inherit;
          &:before {
            border-radius: inherit;
          }
          img {
            border-radius: inherit;
            margin: 2 2 2 2  auto;
            max-height: 170px;
            height: auto;
            object-fit: scale-down;
            vertical-align: middle;
          }
          .learn-more {
            border-radius: 4px;
          }
        }
      }

      .course-info {
        //border-top: 1px solid rgb(190,190,190);
        height: 165px;
      }
    }
  }
}



      } 
    }
    #course-content {
      width: 100%;
    }
  }
//course home
  #main {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }
  .container {
    background: transparent;
    width: 100%;
    margin-top: 6px;
    //padding: 0 1% 0 1%;

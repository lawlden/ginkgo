    height: 100%;
    #side-nav {
      border-right: none;
      height: inherit !important;
      margin-top: auto;
      margin-bottom: auto;
      width: 0;
      position: fixed;
      z-index: 5000;
      top: 0;
      left: 0;
      background-color: transparent;
      overflow-x: hidden;
      transition: 0.5s;
      padding-top: 11%;
      .closebtn {
        border: 1px solid $base-gray;
        border-radius: 2px;
        position: relative;
        float: right;

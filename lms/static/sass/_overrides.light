.instructor-info-action {
  background: $hover-blue !important;  
  border: 2px solid $hover-blue !important;
  color: $light-text !important;
  text-align: center !important;
  &:hover {
    background: transparent !important;
    color: $hover-blue !important;
    text-decoration: none !important;
  }
}

#nav-button {
  box-shadow: 1px 1px 1px $base-gray;
  height: auto;
  width: 2vw;
  max-width: 22px;
  margin-left: -1.5vw;
  background-color: $light-gray;
  float: left;
  border: $border;
  border-radius: 4px;
  position: fixed;
  margin-top: 61px;
  .fa-caret-right {
    width: 100%;
    height: auto;
    color: $dark-text;
    font-size: 1.5em;

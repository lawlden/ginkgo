        background: $hover-blue;
        border: 2px solid $hover-blue;
        color: $light-text;
        a {
          color: inherit;
        }
        &:hover {
          background: $off-white;
          color: $hover-blue !important;
        }
      }
    }
  }
}

.course-info {
